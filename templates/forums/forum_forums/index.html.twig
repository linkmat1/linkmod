{% extends 'base.html.twig' %}

{% block title %}ForumForums index{% endblock %}

{% block body %}
    <h1>ForumForums index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for forum_forum in forum_forums %}
            <tr>
                <td>{{ forum_forum.id }}</td>
                <td>{{ forum_forum.title }}</td>
                <td>{{ forum_forum.description }}</td>
                <td>
                    <a href="{{ path('forums_forum_forums_show', {'id': forum_forum.id}) }}">show</a>
                    <a href="{{ path('forums_forum_forums_edit', {'id': forum_forum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('forums_forum_forums_new') }}">Create new</a>
{% endblock %}
