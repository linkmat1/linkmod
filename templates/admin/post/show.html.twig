{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>


            <tr>
                <th>Content</th>
                <td class="formatted">{{ post.content | markdown }}</td>
            </tr>
            <tr>
                <th></th>
                <td> {{ post.createdAt ? post.createdAt|date('d-F-Y')}}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('admin/post/_delete_form.html.twig') }}
{% endblock %}
