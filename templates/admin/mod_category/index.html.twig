{% extends 'base.html.twig' %}

{% block title %}ModCategory index{% endblock %}

{% block body %}
    <h1>ModCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mod_category in mod_categories %}
            <tr>
                <td>{{ mod_category.id }}</td>
                <td>{{ mod_category.name }}</td>
                <td>
                    <a href="{{ path('mod_category_show', {'id': mod_category.id}) }}">show</a>
                    <a href="{{ path('mod_category_edit', {'id': mod_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mod_category_new') }}">Create new</a>
{% endblock %}
