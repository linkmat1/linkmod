{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <h1>Posts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>IsOnline</th>
                <td>{{ post.isOnline ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsNews</th>
                <td>{{ post.isNews ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsInfo</th>
                <td>{{ post.isInfo ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ post.Info }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PublishAt</th>
                <td>{{ post.publishAt ? post.publishAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>{{ post.source }}</td>
            </tr>
            <tr>
                <th>Deprecated</th>
                <td>{{ post.deprecated }}</td>
            </tr>
            <tr>
                <th>IsDepre</th>
                <td>{{ post.isDepre ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('posts_index') }}">back to list</a>

    <a href="{{ path('posts_edit', {'id': post.id}) }}">edit</a>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
