{% extends 'admin/base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="dashboard-title">
        <h2>Gestion des Categories</h2>
    </div>
    <div class="colto__action">
        <div class="left__align">

        </div>
        <div class="right-align">
            <form class="form-group dashboard-search">
                <input name="q" type="text" placeholder="Rechercher une categorie" value="{{ app.request.get('q') }}">
            </form>
            <a href="{{ path('category_new') }}" class="dashboard-btn">Ajouter une categorie</a>
        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>IsOnline</th>


            {% if is_granted('ROLE_SUPERADMIN') %}
                    <th>actions</th>
                {% endif %}

            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td><span class="bullet {% if category.isOnline == false %}bullet--danger{% endif %}"></span></td>

                <td>
                    {% if is_granted('ROLE_SUPERADMIN') %}
                        <div class="dashboard-actions">
                            <a href="{{ path('category_edit', {slug: category.slug, id: category.id}) }}">{{ icon('edit') }}</a>
                            <form method="post" action="{{ path('category_delete', {'id': category.id}) }}"
                                  onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                <button class="btn">{{ icon('cross') }}</button>
                            </form>
                        </div>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(categories) }}

{% endblock %}
