{% extends 'admin/base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>IsOnline</th>
                <th>Slug</th>
                <th>Shortdesc</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.isOnline ? 'Yes' : 'No' }}</td>
                <td>{{ category.slug }}</td>
                <td>{{ category.shortdesc }}</td>
                <td>
                    <a href="{{ path('category_edit', {slug: category.slug, id: category.id})  }}">{{icon('edit')}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">Create new</a>
{% endblock %}
